<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</head>


    <div class="main-panel">
      <div class="content">
            <div class="card">
              <div class="card-header">
                <h1 class="card-title"> Simple Table</h1>
                <a 
                     href="san-pham/them-moi" class="btn btn-link">Thêm Sản Phẩm </a>
                    <a  href="danh-muc/" class="btn btn-link">DS danh mục</a>
                <a  href="/dang-xuat" class="btn btn-link">Đăng xuất</a>

              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-striped table-bordered table-hover">
                    <thead class=" text-primary"> 
                      <tr>
                      <th>Stt</th>
                      <th>Id</th>
                      <th>Name</th>
                      <th>Price</th>
                      <th>Quantity</th>
                      <th>Description</th>
                      <th>Category</th>
                      <th>Image</th>
                      <th>Released</th>
                      <th>Action</th>
                      </tr>
                    </thead>
                    <tbody>
                    {{#each products}}
                    <tbody>
                      <tr>
                        <td>{{this.index}}</td>
                        <td>{{this._id}}</td>
                        <td>{{this.name}}</td>
                        <td>{{this.price}}</td>
                        <td>{{this.quantity}}</td>
                        <td>{{this.description}}</td>
                        <td>{{this.category_id.name}}</td>
                        <td>
                          <img src="{{this.image}}" width="100" height="100"/>
                        </td>
                        <td>{{this.released}}</td>
                        <td>
                          <button onclick="edit('{{this._id}}')" class="btn btn-link"
                                                style="width: 70px; height: 45px; background: aqua; 
                                                border-radius: 5px; color: white; text-decoration-line: none; margin-left: 12%;">Edit</button>
                                            <button onclick="onClickDelete('{{this._id}}');" data-toggle="modal"
                                                style="width: 70px; height: 45px; background: aqua; 
                                                border-radius: 5px; color: white; text-decoration-line: none;
                                                margin-left: 12%; margin-top: 5px;" data-target="#confirmModal"
                                                class="btn btn-link">Delete</button>
                        </td>
                      </tr>
                      {{/each}}
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>   
    </div>

    <!--  Modals-->
    <div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel"></h4>
                </div>
                <div class="modal-body">
                    <div class="panel-body">
                        <h3>Are you sure?</h3>
                        <div class="form-group modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                            <button type="button" onclick="onDelete()" class="btn btn-primary">Yes</button>
                        </div>
                    </div>
                </div>                
            </div>
        </div>
    </div>
    <!-- End Modals-->
  
<script>
 const edit = (id) => {
        // http://localhost:3000/san-pham/:id/edit
        window.location.href = `http://localhost:3000/san-pham/${id}/edit`
    }

    let deleted_id;

    const onClickDelete = (id) => {
        deleted_id = id;
    }

    const fetchAPI = async (url, option) => {
        const res = await fetch(url, option);
        return res.json();
    }

    const onDelete = async () => {
        const url = `http://localhost:3000/san-pham/${deleted_id}/delete`;
        const option = {
            method: 'delete',
            headers: { 'Content-Type': 'application/json' }
        }
        try {
            await fetchAPI(url, option);
            window.location.href = '/san-pham';
        } catch (e) { console.log('Delete error: ', e) }
    }


</script>